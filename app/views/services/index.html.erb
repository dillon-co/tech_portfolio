<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Service type</th>
      <th>Hours</th>
      <th>Description</th>
      <th>Project url</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.service_type %></td>
        <td><%= service.hours %></td>
        <td><%= service.description %></td>
        <td><%= service.project_url %></td>
        <td><%= service.client %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if client_signed_in? %>
  <%= link_to 'Request A Project', new_service_request_path %>
<% elsif admin_signed_in?  %>
  <%= link_to "Dashboard", dashboard_path %>
<% else %>
  <%= link_to 'Request A Project', new_client_session_path %>
<% end %>
